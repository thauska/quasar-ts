  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "exclude": [
    "node_modules", 
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/shims-vue.d.ts",
    "src/types/vue-module.d.ts",
    "src/types/app.d.ts"
  ]
}
